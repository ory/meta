{
  "name": "meta",
  "version": "1.0.0",
  "prettier": "ory-prettier-styles",
  "config": {
    "prettierTarget": "**/*.{js,ts,md,mdx}"
  },
  "scripts": {
    "format": "prettier --write ${npm_package_config_prettierTarget}",
    "format:check": "prettier --check ${npm_package_config_prettierTarget}",
    "text-run-build": "cd node_modules/text-runner && npm i && make build-all",
    "text-run": "./node_modules/text-runner/text-runner-cli/bin/text-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ory/meta.git"
  },
  "devDependencies": {
    "ory-prettier-styles": "^1.1.1",
    "prettier": "2.2.1",
    "text-runner": "git+https://github.com/kevgo/text-runner.git#63c31b3"
  }
}
